.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 40px);
  padding: 20px;
  flex-wrap: nowrap;
  background: linear-gradient(#ff6600 0%, #ff933b 0%, #ffffff 30%);
}
.content .content-heard-hide {
  position: absolute;
  background-color: white;
  width: 100%;
  height: 100px;
  top: 0;
  z-index: 200;
}
.content .content-heard-hide .content-heard-hide-search {
  position: absolute;
  padding: 10px 20px;
  bottom: 0;
}
.content .content-heard {
  display: flex;
  width: 100%;
  height: 100px;
  position: -webkit-sticky;
  position: sticky;
  margin-top: 20px;
  margin-bottom: 10px;
  flex-direction: column;
  align-items: flex-start;
}
.content .content-heard .content-heard-top {
  display: flex;
  flex-direction: row;
  flex: 1, 1;
}
.content .content-heard .content-heard-top .content-heard-top-weather {
  display: flex;
  align-items: center;
  margin-left: 10px;
  font-size: 14px;
  font-weight: 400;
  color: #555555;
}
.content .content-heard .content-heard-bottom {
  height: 48px;
  display: flex;
  align-items: flex-end;
}
.content .content-heard .content-heard-bottom .content-heard-currentDate {
  width: 120px;
}
.content .content-heard .content-heard-bottom .content-heard-currentDate .content-heard-currentDate-p1 {
  font-size: 20px;
  font-weight: 600;
  color: #1c1c1c;
  white-space: nowrap;
}
.content .content-heard .content-heard-bottom .content-heard-currentDate .content-heard-currentDate-p2 {
  font-size: 14px;
  font-weight: 400;
  color: #555555;
  white-space: nowrap;
}
.content .content-heard .content-heard-bottom .content-heard-search {
  flex: 1;
}
.content .content-main {
  width: 100%;
  border-radius: 6px;
}
.content .content-main .content-main-heard {
  height: 160px;
  width: 100%;
  border-radius: 6px;
  background-color: #ffae7c;
  margin: 10px 0;
}
.content .content-main .content-main-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: start;
  grid-gap: 10px;
  margin-bottom: 84px;
}
.content .content-main .content-main-list .ul {
  margin: 0;
  padding: 0;
  width: 100%;
}
.content .content-main .content-main-list .ul .li {
  display: flex;
  flex-direction: column;
  align-content: space-around;
  background-color: #dbdbdb;
  margin-bottom: 10px;
  border-radius: 6px;
}
.content .content-main .content-main-list .ul .li .text {
  flex: 1;
  padding: 10px;
  font-size: 12px;
}
.content .content-main .content-main-list .ul .li .text .text-title {
  font-size: 16px;
}
.content .content-main .content-main-list .ul .li .text .text-details {
  font-size: 12px;
}
.content .content-main .content-main-noList {
  height: 100%;
}
.content .content-main .content-main-noList .content-main-noList-add {
  height: 400px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.content .content-main .content-main-noList .content-main-noList-add .title {
  font-size: 20px;
  font-weight: 600;
  color: #1c1c1c;
  margin: 10xp 0;
}
