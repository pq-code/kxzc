.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 40px);
  padding: 20px;
  flex-wrap: nowrap;
}
.content .content-heard {
  display: flex;
  width: 100%;
  height: 100px;
  position: -webkit-sticky;
  position: sticky;
  margin-top: 20px;
  margin-bottom: 10px;
  flex-direction: column;
  align-items: flex-start;
}
.content .content-main {
  height: calc(100vh - 130px);
  width: 100%;
  overflow-y: auto;
  border-radius: 6px;
}
.content .content-main .li {
  height: 60px;
  width: 100%;
  background-color: #c6c6c6;
  margin-top: 10px;
}
