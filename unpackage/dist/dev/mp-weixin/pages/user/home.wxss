.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 40px);
  padding: 20px;
  flex-wrap: nowrap;
}
.content .content-heard {
  display: flex;
  width: 100%;
  height: 100px;
  position: -webkit-sticky;
  position: sticky;
  margin-top: 50px;
  margin-bottom: 10px;
  flex-direction: row;
  align-items: flex-end;
}
.content .content-heard .user-name {
  font-size: 20px;
  font-weight: 600;
  color: #1c1c1c;
  white-space: nowrap;
  margin-left: 20px;
}
.content .content-main {
  height: calc(100vh - 130px);
  width: 100%;
  overflow-y: auto;
  border-radius: 6px;
}
.content .content-main .li {
  height: 40px;
  width: 100%;
  background-color: aqua;
  margin-top: 10px;
}
